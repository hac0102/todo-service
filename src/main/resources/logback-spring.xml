<configuration>
    <!-- 변수 지정 -->
    <springProfile name="local">
        <property name="LOG_DIR" value="/Users/hachangjin/IdeaProjects/todo-service/logs" />
    </springProfile>

    <springProfile name="dev">
        <property name="LOG_DIR" value="/home/hac/project/todo/logs" />
    </springProfile>

    <springProfile name="prod">
        <property name="LOG_DIR" value="/home/hac/project/todo/logs" />
    </springProfile>

    <property name="LOG_PATH_NAME" value="${LOG_DIR}/todo-service.log" />
    <property name="vin_trace_path_name" value="${LOG_DIR}/vin_trace.log" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%mdc] [%-5p] [%F]%M\(%L\) : %m%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH_NAME}</file>
        <!-- 일자별로 로그파일 적용하기 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH_NAME}.%d{yyyyMMdd}</fileNamePattern>
            <maxHistory>90</maxHistory> <!-- 일자별 백업파일의 보관기간 -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%mdc] [%-5p] [%F]%M\(%L\) : %m%n</pattern>
        </encoder>
    </appender>

    <appender name="logging.vin.trace" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${vin_trace_path_name}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${vin_trace_path_name}.%d{yyyyMMdd}</fileNamePattern>
            <maxHistory>90</maxHistory> <!-- 일자별 백업파일의 보관기간 -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %m%n</pattern>
        </encoder>
    </appender>

    <!--    <logger name="jdbc" level="OFF"/>-->

    <!--    <logger name="jdbc.sqlonly" level="OFF"/>-->
    <!--    <logger name="jdbc.sqltiming" level="DEBUG"/>-->
    <!--    <logger name="jdbc.audit" level="OFF"/>-->
    <!--    <logger name="jdbc.resultset" level="OFF"/>-->
    <!--    <logger name="jdbc.resultsettable" level="DEBUG"/>-->
    <!--    <logger name="jdbc.connection" level="OFF"/>-->

    <logger name="logging.vin.trace">
        <level value="info" />
        <appender-ref ref="logging.vin.trace" />
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>